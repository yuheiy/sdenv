{
  "name": "my-website",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "astro build",
    "dev": "astro dev",
    "fix": "node --run fix:eslint && node --run fix:prettier",
    "fix:eslint": "node --run lint:eslint -- --fix",
    "fix:prettier": "node --run lint:prettier -- --write",
    "lint": "astro sync && pnpm run \"/^lint:.*/\"",
    "lint:astro": "astro check",
    "lint:eslint": "eslint --max-warnings 0",
    "lint:prettier": "prettier --check .",
    "preview": "astro preview",
    "test": "vitest --passWithNoTests"
  },
  "dependencies": {
    "@astrojs/sitemap": "^3.5.1",
    "@tailwindcss/vite": "^4.1.12",
    "@yuheiy/postcss-custom-functions": "^0.1.1",
    "alpinejs": "^3.15.0",
    "astro": "^5.13.5",
    "astro-icon": "^1.1.5",
    "postcss-load-config": "^6.0.1",
    "sharp": "^0.34.3",
    "tailwindcss": "^4.1.12",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@eslint/js": "^9.34.0",
    "@types/alpinejs": "^3.13.11",
    "eslint": "^9.34.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-better-tailwindcss": "^3.7.6",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.42.0",
    "vitest": "^3.2.4"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "^22.19.0",
      "onFail": "download"
    }
  },
  "packageManager": "pnpm@10.15.1"
}
