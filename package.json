{
  "name": "my-website",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "astro build",
    "dev": "concurrently --raw \"npm:dev:*\"",
    "dev:astro": "astro dev --host",
    "dev:css": "chokidar \"src/styles/**/*.css\" --command \"touch tailwind.config.js\" --debounce 0 --silent",
    "fix": "npm run fix:eslint && npm run fix:prettier",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "lint": "astro sync && concurrently --raw \"npm:lint:*\"",
    "lint:astro": "astro check",
    "lint:eslint": "eslint --max-warnings 0",
    "lint:prettier": "prettier . --check",
    "lint:type-check": "tsc -b",
    "preview": "astro preview",
    "test": "vitest --passWithNoTests"
  },
  "dependencies": {
    "@astrojs/sitemap": "3.2.1",
    "@astrojs/tailwind": "5.1.4",
    "@tailwindcss/container-queries": "0.1.1",
    "alpinejs": "3.14.8",
    "astro": "5.1.7",
    "astro-icon": "1.1.5",
    "postcss-fluid-sizing-function": "0.0.2",
    "tailwindcss-animate": "1.0.7",
    "tiny-invariant": "1.3.3"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.4",
    "@eslint/js": "9.18.0",
    "@types/alpinejs": "3.13.11",
    "chokidar-cli": "3.0.0",
    "concurrently": "9.1.2",
    "eslint": "9.18.0",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-tailwindcss": "3.18.0",
    "prettier": "3.4.2",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-css-order": "2.1.2",
    "prettier-plugin-organize-imports": "4.1.0",
    "prettier-plugin-tailwindcss": "0.6.10",
    "typescript-eslint": "8.20.0",
    "vitest": "3.0.2"
  },
  "engines": {
    "node": "22"
  }
}
