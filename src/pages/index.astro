---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import logoAlpinejsImage from '../assets/home/logo-alpinejs.svg';
import logoAstroImage from '../assets/home/logo-astro.svg';
import logoTailwindcssImage from '../assets/home/logo-tailwindcss.svg';
import { SITE_TITLE } from '../consts';
import Layout from '../layouts/Layout.astro';

const tagline = 'ウェブサイトのためのフロントエンド開発スターターキット';
const description =
  'sdenv（読み方: えすでぃーえんぶ）は、ウェブサイト（not ウェブアプリケーション）のためのフロントエンド開発スターターキットです。モダンなプラクティスを取り入れながらも、より多くのウェブサイト開発者に向けたHTML中心の開発環境を構成しています。';
---

<Layout isHome tagline={tagline} description={description}>
  <header class="wrapper py-[fluid-sizing(4rem,10rem)]">
    <h1>
      <Icon
        name="logo"
        class="mx-auto h-[fluid-sizing(2.5rem,6rem)] w-auto text-[#111111]"
        role="img"
        aria-label={SITE_TITLE}
      />
    </h1>
    <p
      class="mt-[fluid-sizing(1.25rem,2.5rem)] text-center text-[length:fluid-sizing(1rem,1.5rem)] font-bold kerning-all [word-break:auto-phrase]"
    >
      {tagline}
    </p>
  </header>

  <main class="wrapper mb-[fluid-sizing(4rem,10rem)] max-w-[90rem]">
    <div class="flex flex-col items-center gap-x-4 lg:flex-row" role="list">
      {
        (
          [
            [
              {
                src: logoAstroImage,
                alt: 'Astro',
              },
              'https://astro.build/',
              'Webサイトフレームワーク',
            ],
            [
              {
                src: logoTailwindcssImage,
                alt: 'Tailwind CSS',
              },
              'https://tailwindcss.com/',
              'CSSフレームワーク',
            ],
            [
              {
                src: logoAlpinejsImage,
                alt: 'Alpine.js',
              },
              'https://alpinejs.dev/',
              'JavaScriptフレームワーク',
            ],
          ] as const
        ).map(([image, link, label], i) => (
          <>
            {i > 0 && (
              <div class="text-7xl font-bold text-slate-200 lg:mb-5">
                {/* TODO: svgに置き換える */}×
              </div>
            )}
            <div class="w-full rounded-xl border border-slate-300" role="listitem">
              <p>
                <a href={link} target="_blank">
                  <Image class="w-full rounded-t-xl" {...image} />
                </a>
              </p>
              <p class="rounded-b-xl border-t border-slate-300 bg-slate-50 px-4 py-2 text-center font-bold kerning-normal">
                {label}
              </p>
            </div>
          </>
        ))
      }
    </div>
  </main>
</Layout>
