---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="wrapper pt-[fluid(3rem,5rem)]">
  <p class="mb-3 text-sm empty:hidden"><slot /></p>
  <h1
    class="text-pretty text-[length:fluid(2rem,3rem)] font-bold leading-normal kerning-all [word-break:auto-phrase]"
  >
    {title}
  </h1>
</header>

<div class="my-[fluid(3rem,5rem)] border-t border-slate-200"></div>
