---
interface Props {
  title: string;
  meta?: string | undefined;
}

const { title, meta } = Astro.props;
---

<header class="wrapper pt-[fluid-sizing(3rem,5rem)]">
  {meta && <p class="mb-3 text-sm" set:html={meta} />}
  <h1
    class="text-pretty text-[length:fluid-sizing(2rem,3rem)] font-bold leading-normal kerning-all [word-break:auto-phrase]"
  >
    {title}
  </h1>
</header>

<div class="my-[fluid-sizing(3rem,5rem)] border-t border-slate-200"></div>
