---
interface Props {
  initialCount?: number;
}

const { initialCount = 0 } = Astro.props;
---

<div class="my-16 grid grid-cols-3 place-items-center text-3xl" x-data={`counter(${initialCount})`}>
  <button x-on:click="count--">-</button>
  <pre x-text="count">{ initialCount }</pre>
  <button x-on:click="count++">+</button>
</div>

<script>
  import Alpine from 'alpinejs';

  Alpine.data('counter', (initialCount) => ({
    count: initialCount,
  }));
</script>
